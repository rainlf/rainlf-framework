<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.railf.framework.infrastructure.dao.mybatis.mapper.UserDOMapper">

    <resultMap type="com.railf.framework.infrastructure.dao.mybatis.entity.UserDO" id="UserDOMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="table">user</sql>

    <!--查询单个-->
    <select id="selectAll" resultMap="UserDOMap">
        select id, name, email
        from
        <include refid="table"/>
    </select>

    <insert id="insertAll" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="table"/>
        (name, email)
        values
        <foreach collection="userList" item="user" separator=",">
            (#{user.name}, #{user.email})
        </foreach>
    </insert>
</mapper>